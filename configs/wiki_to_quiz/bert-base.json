{
    "train_data_path": "work/dataset/train_sentence.json",
    "validation_data_path": "work/dataset/dev_question.json",
    "dataset_reader": {
        "type": "text_entity",
        "tokenizer": {
            "type": "pretrained_transformer",
            "model_name": "bert-base-cased",
            "max_length": 64
        },
        "token_indexers": {
            "tokens": {
                "type": "pretrained_transformer",
                "model_name": "bert-base-cased"
            }
        }
    },
    "validation_dataset_reader": {
        "type": "text_entity",
        "tokenizer": {
            "type": "pretrained_transformer",
            "model_name": "bert-base-cased",
            "max_length": 512
        },
        "token_indexers": {
            "tokens": {
                "type": "pretrained_transformer",
                "model_name": "bert-base-cased"
            }
        }
    },
    "datasets_for_vocab_creation": ["train"],
    "model": {
        "type": "from_archive",
        "archive_file": "work/wiki/bert-base/model.tar.gz"
    },
    "data_loader": {
        "batch_sampler": {
            "type": "bucket",
            "batch_size": 128
        }
    },
    "validation_data_loader": {
        "batch_sampler": {
            "type": "bucket",
            "batch_size": 32
        }
    },
    "trainer": {
        "optimizer": {
            "type": "adamw",
            "parameter_groups": [
                [["bias", "LayerNorm.weight"], {"weight_decay": 0.0}],
                [["entity_embedder"], {"lr": 2e-4}]
            ],
            "lr": 5e-5,
            "weight_decay": 0.01
        },
        "learning_rate_scheduler": {
            "type": "slanted_triangular",
            "num_epochs": 10,
            "num_steps_per_epoch": 4593,
            "cut_frac": 0.2
        },
        "checkpointer": {
            "num_serialized_models_to_keep": 1
        },
        "grad_norm": 1.0,
        "num_epochs": 10,
        "cuda_device": 0,
        "validation_metric": "+mrr"
    }
}
