{
    "train_data_path": "work/dataset/triviaqa/train_question.json",
    "validation_data_path": "work/dataset/triviaqa/dev_question.json",
    "dataset_reader": {
        "type": "text_entity",
        "tokenizer": {
            "type": "pretrained_transformer",
            "model_name": "bert-base-cased",
            "max_length": 64
        },
        "token_indexers": {
            "tokens": {
                "type": "pretrained_transformer",
                "model_name": "bert-base-cased"
            }
        }
    },
    "validation_dataset_reader": {
        "type": "text_entity",
        "tokenizer": {
            "type": "pretrained_transformer",
            "model_name": "bert-base-cased",
            "max_length": 512
        },
        "token_indexers": {
            "tokens": {
                "type": "pretrained_transformer",
                "model_name": "bert-base-cased"
            }
        }
    },
    "vocabulary": {
        "type": "from_files",
        "directory": "work/triviaqa/vocab/bert-base/vocabulary"
    },
    "model": {
        "type": "quiz",
        "text_field_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "pretrained_transformer",
                    "model_name": "bert-base-cased"
                }
            }
        },
        "seq2vec_encoder": {
            "type": "cls_pooler",
            "embedding_dim": 768,
            "cls_is_last_token": false
        },
        "dropout": 0.1
    },
    "data_loader": {
        "batch_sampler": {
            "type": "bucket",
            "batch_size": 128
        }
    },
    "validation_data_loader": {
        "batch_sampler": {
            "type": "bucket",
            "batch_size": 32
        }
    },
    "trainer": {
        "optimizer": {
            "type": "huggingface_adamw",
            "parameter_groups": [
                [["bias", "LayerNorm.weight"], {"weight_decay": 0.0}],
                [["entity_embedder"], {"lr": 2e-4}]
            ],
            "lr": 5e-5,
            "weight_decay": 0.01,
            "correct_bias": false
        },
        "learning_rate_scheduler": {
            "type": "slanted_triangular",
            "num_epochs": 30,
            "num_steps_per_epoch": 583,
            "cut_frac": 0.2
        },
        "checkpointer": {
            "num_serialized_models_to_keep": 1
        },
        "grad_norm": 1.0,
        "num_epochs": 30,
        "cuda_device": 0,
        "validation_metric": "+mrr"
    }
}
